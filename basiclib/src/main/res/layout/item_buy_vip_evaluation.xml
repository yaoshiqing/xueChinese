<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="187dp">

    <ImageView
        android:id="@+id/buy_vip_iv_bg"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:src="@drawable/ic_buy_vip_evaluation_bg"
        android:contentDescription="@string/stringEmpty"
        android:scaleType="fitXY"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="0dp"/>

    <com.ybear.ybcomponent.widget.shape.ShapeImageView
        android:id="@+id/buy_vip_evaluation_siv_user_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_photo_user"
        android:contentDescription="@string/stringEmpty"
        android:scaleType="centerCrop"
        android:layout_alignStart="@id/buy_vip_iv_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:shape="oval"/>

    <TextView
        android:id="@+id/buy_vip_evaluation_tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="BobbyAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_toEndOf="@id/buy_vip_evaluation_siv_user_photo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/buy_vip_evaluation_tv_learned_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Learned 332 days AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
        android:textSize="13sp"
        android:textColor="@color/colorWhite"
        android:maxLines="1"
        android:layout_alignStart="@id/buy_vip_evaluation_tv_user_name"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/buy_vip_evaluation_tv_eval_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="I am studying in China, and I insist on learning Chinese on Ace Mandarin every day. Now I can communicate easily in Chinese with my friendsï¼Œand also allow me to make more friends."
        android:textSize="14sp"
        android:textColor="@color/color33"
        android:includeFontPadding="false"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignStart="@id/buy_vip_iv_bg"
        android:layout_alignTop="@id/buy_vip_evaluation_siv_user_photo"
        android:layout_alignBottom="@id/buy_vip_iv_bg"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp" />
</RelativeLayout>