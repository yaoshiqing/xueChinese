<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="361dp"
        android:orientation="vertical"
        android:background="@drawable/ic_dialog_login_tips_bg"
        android:layout_gravity="center">
        <TextView
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="@string/stringLoginOfTestTips"
            android:textColor="@color/color66"
            android:textSize="15sp"
            android:textStyle="bold"
            android:lineSpacingMultiplier="1.4"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="188dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/dialog_login_tips_tv_login_btn"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:text="@string/stringLoginOrRegister"
            android:textSize="19sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/ic_touch_btn_true"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:clickable="true"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_login_tips_iv_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_login_close"
        android:contentDescription="@string/stringEmpty"
        android:layout_gravity="center_horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="20dp"
        android:focusable="true"
        android:clickable="true"/>

</LinearLayout>