<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="314dp"
    android:layout_height="407dp"
    android:background="@drawable/ic_dialog_free_vouchers_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/free_vouchers_iv_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_free_vouchers_close_btn"
        android:contentDescription="@string/stringEmpty"
        android:paddingBottom="16dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:layout_gravity="end"
        android:focusable="true"
        android:clickable="true"
        android:visibility="visible"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/free_vouchers_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color66"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="18dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_free_vouchers_content"
        android:contentDescription="@string/stringEmpty"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/free_vouchers_tv_ok_btn"
        android:layout_width="170dp"
        android:layout_height="51dp"
        android:text="@string/stringVouchersUnusedUseNow"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/ic_touch_btn_true"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

</LinearLayout>