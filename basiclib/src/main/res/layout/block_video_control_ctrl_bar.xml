<?xml version="1.0" encoding="utf-8"?>
<com.ybear.ybcomponent.widget.shape.ShapeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:gravity="center_vertical"
    android:background="@color/colorBlack30"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="6dp"
    app:shapeRadius="15dp">

    <ImageView
        android:id="@+id/video_control_ctrl_bar_iv_play_btn"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_video_control_play_btn"
        android:scaleType="centerInside"
        android:contentDescription="@string/stringEmpty"
        android:focusable="true"
        android:clickable="true"/>

    <TextView
        android:id="@+id/video_control_ctrl_bar_tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="03:55"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:gravity="center" />

    <SeekBar
        android:id="@+id/video_control_ctrl_bar_sb_seek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:thumb="@drawable/shape_seek_progress_thumb_white"
        android:progressDrawable="@drawable/layer_video_seek_progress"
        android:progress="0" />

    <TextView
        android:id="@+id/video_control_ctrl_bar_tv_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10:00"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginEnd="5dp"/>

    <ImageView
        android:id="@+id/video_control_ctrl_bar_iv_multi_role_btn"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_video_control_full_screen_btn"
        android:scaleType="centerInside"
        android:contentDescription="@string/stringEmpty"
        android:focusable="true"
        android:clickable="true"/>

</com.ybear.ybcomponent.widget.shape.ShapeLinearLayout>