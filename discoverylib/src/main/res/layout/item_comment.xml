<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_comment_ll_user_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="11dp"
        android:visibility="gone">
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="11dp">
            <com.ybear.ybcomponent.widget.shape.ShapeImageView
                android:id="@+id/item_comment_siv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_photo_user"
                android:contentDescription="@string/stringEmpty"
                android:scaleType="centerCrop"
                app:shape="oval"
                app:shapeBorderSize="1dp"
                app:shapeBorderColor="@color/colorEE"/>
            <ImageView
                android:id="@+id/item_comment_iv_vip_icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_photo_user_vip_icon"
                android:contentDescription="@string/stringEmpty"
                android:layout_gravity="end|bottom"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/item_comment_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Little monster"
            android:textSize="14sp"
            android:textColor="@color/color33"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_comment_ll_interactive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp">
        <TextView
            android:id="@+id/item_comment_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="China's tear-jerker film Hi, Mom has overtaken American fantasy Wonder Woman to become the world's top-grossing film ever from a solo female director."
            android:textSize="14sp"
            android:textColor="@color/color33"
            android:lineSpacingMultiplier="1.2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/item_comment_tv_more_content_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringCommentMoreContent"
            android:textSize="12sp"
            android:textColor="@color/colorMain"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:focusable="true"
            android:clickable="true"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/item_comment_tv_like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_comments_like_un_selected_btn"
                android:drawablePadding="5dp"
                tools:text="999"
                android:textSize="12sp"
                android:textColor="@color/color66"
                android:gravity="center_vertical"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/item_comment_iv_reply_msg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comments_reply_msg_btn"
                android:contentDescription="@string/stringEmpty"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/item_comment_iv_more_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comments_more_btn"
                android:contentDescription="@string/stringEmpty"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginEnd="20dp"
                android:visibility="gone"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/item_comment_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="17/03"
                android:textSize="12sp"
                android:textColor="@color/color99"/>
        </LinearLayout>

        <View
            android:id="@+id/item_comment_v_main_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorMainBG"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_comment_rv_child_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/item_comment_v_div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMainBG"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/item_comment_tv_view_comments_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/stringViewComments"
                android:textSize="12sp"
                android:textColor="@color/colorMain"
                android:drawableEnd="@drawable/ic_comments_view_comments_arrow"
                android:drawablePadding="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="9dp"
                android:gravity="center_vertical"
                android:focusable="true"
                android:clickable="true"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>