<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_grammar_example_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="你想和我一起去吃饭吗？"
        android:textSize="16sp"
        android:textColor="@color/color66"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/item_grammar_example_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Do you want to go to dinner with me?"
        android:textSize="16sp"
        android:textColor="@color/color99" />

</LinearLayout>