<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:layout_marginBottom="15dp"
    tools:background="@color/colorMain"
    app:shapeRadius="10dp">

    <ImageView
        android:id="@+id/item_targeted_learning_iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/stringEmpty"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:background="@color/colorBlack20"/>-->

    <ImageView
        android:id="@+id/item_targeted_learning_iv_new_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/stringEmpty"
        android:src="@drawable/ic_new_flag"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal|bottom">
        <TextView
            android:id="@+id/item_targeted_learning_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="SELF INTRODUCTION"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/item_targeted_learning_tv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Who are these people in the \nlast lecture? \n...."
            android:textSize="13sp"
            android:textColor="@color/colorWhite"
            android:maxLines="2"
            android:includeFontPadding="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stringEllipsis"
            android:textSize="13sp"
            android:textColor="@color/colorWhite"
            android:includeFontPadding="false"/>
    </LinearLayout>

</FrameLayout>