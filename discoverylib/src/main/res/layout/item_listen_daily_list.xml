<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:minHeight="200dp"
    android:layout_marginEnd="20dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/listen_daily_iv_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:contentDescription="@string/stringEmpty"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/listen_daily_iv_new_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/stringEmpty"
            android:src="@drawable/ic_new_flag"
            android:visibility="visible"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="@drawable/shape_discovery_page_item_bottom_bg"
            android:layout_gravity="center|bottom">
            <TextView
                android:id="@+id/listen_daily_tv_to_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_listen_daily_to_view_count"
                android:drawablePadding="5dp"
                tools:text="20K"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_gravity="center"/>
        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/listen_daily_tv_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color33"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="中国人打招呼不说\n“你好”？" />

    <TextView
        android:id="@+id/listen_daily_tv_classify_tag"
        android:layout_width="48dp"
        android:layout_height="19sp"
        tools:text="HSK1"
        android:textSize="13sp"
        android:textColor="@color/colorMain"
        android:textStyle="bold"
        android:background="@drawable/shape_classify_tag_bg"
        android:gravity="center"
        android:visibility="gone"/>

</LinearLayout>