<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewFrontCurrency">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorMain</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/shape_front_bar_currency_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextViewAnswerTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color66</item>
        <item name="android:layout_marginStart">33dp</item>
        <item name="android:layout_marginEnd">33dp</item>
        <item name="android:layout_marginTop">33dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

</resources>