<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <com.gjjy.frontlib.widget.AnswerBar
        android:id="@+id/introduce_ab_answer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.ybear.ybcomponent.widget.FragmentViewPager
        android:id="@+id/introduce_fvp_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"/>

    <com.gjjy.frontlib.widget.CheckButton
        android:id="@+id/introduce_cb_check_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"/>

</LinearLayout>