<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="156dp"
    android:background="@drawable/ic_popup_refresh_score_lock_bg"
    android:gravity="center_horizontal"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/popup_refresh_score_lock_tv_content"
        android:layout_width="181dp"
        android:layout_height="50dp"
        tools:text="@string/stringAnswerTestRefreshScoreOfLackLightningTips"
        android:textColor="@color/colorMain"
        android:textSize="17sp"
        android:textStyle="bold"
        android:lineSpacingMultiplier="1.1"
        android:includeFontPadding="false"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/popup_refresh_score_lock_tv_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        tools:text="@string/stringOK"
        android:textColor="@color/colorWhite"
        android:textSize="19sp"
        android:textStyle="bold"
        android:background="@drawable/ic_touch_btn_true"
        android:gravity="center"
        android:focusable="true"
        android:clickable="true" />
</LinearLayout>