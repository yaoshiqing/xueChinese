<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:clipChildren="false">

    <Space
        android:id="@+id/toolbar_height_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.gjjy.basiclib.widget.Toolbar
        android:id="@+id/review_tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"/>

    <RelativeLayout
        android:id="@+id/review_rl_opts"
        android:layout_width="281dp"
        android:layout_height="262dp"
        android:layout_gravity="center_horizontal"
        android:clipChildren="false">

        <com.ybear.ybcomponent.widget.RedDotLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:redDotWidth="21dp"
            app:redDotHeight="21dp"
            app:redDotTextSize="14dp"
            app:redDotText="1"
            app:redDotShowPlace="rt"
            app:redDotBackgroundColor="@color/colorRedDot"
            app:redDotOffsetX="-16dp"
            app:redDotOffsetY="16dp"
            android:focusable="true"
            android:clickable="true"
            tools:ignore="RelativeOverlap">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:textSize="14sp"
                android:textColor="@color/color66"
                android:textStyle="bold"
                android:gravity="center" />
        </com.ybear.ybcomponent.widget.RedDotLayout>

        <com.ybear.ybcomponent.widget.RedDotLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:redDotWidth="21dp"
            app:redDotHeight="21dp"
            app:redDotTextSize="14dp"
            app:redDotShowPlace="rt"
            app:redDotBackgroundColor="@color/colorRedDot"
            app:redDotOffsetX="-16dp"
            app:redDotOffsetY="16dp"
            android:layout_alignParentEnd="true"
            android:focusable="true"
            android:clickable="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="8dp"
                android:textSize="14sp"
                android:textColor="@color/color66"
                android:textStyle="bold"
                android:gravity="center"/>
        </com.ybear.ybcomponent.widget.RedDotLayout>

        <com.ybear.ybcomponent.widget.RedDotLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:redDotWidth="21dp"
            app:redDotHeight="21dp"
            app:redDotTextSize="14dp"
            app:redDotShowPlace="rt"
            app:redDotBackgroundColor="@color/colorRedDot"
            app:redDotOffsetX="-16dp"
            app:redDotOffsetY="16dp"
            android:focusable="true"
            android:clickable="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="8dp"
                android:textSize="14sp"
                android:textColor="@color/color66"
                android:textStyle="bold"
                android:gravity="center"/>
        </com.ybear.ybcomponent.widget.RedDotLayout>
    </RelativeLayout>
</LinearLayout>