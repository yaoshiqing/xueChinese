<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_answer_setting_tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:drawableStart="@drawable/ic_answer_set_hearing"
            android:drawablePadding="10dp"
            tools:text="text"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

        <include
            layout="@layout/switch_normal"
            android:id="@+id/item_answer_setting_swi_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/item_answer_setting_v_div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorEF"/>
</LinearLayout>