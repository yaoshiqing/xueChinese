<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:paddingBottom="30dp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/answer_end_iv_icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@drawable/ic_answer_end_icon_0"
            android:contentDescription="@string/stringEmpty"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/answer_end_iv_icon_lightning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_answer_end_icon_lightning_0"
            android:contentDescription="@string/stringEmpty"
            android:layout_gravity="center"
            android:translationY="-20dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/answer_end_lightning_anim_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/stringEmpty"
            tools:src="@drawable/ic_answer_end_lightning_1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/answer_end_tv_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textColor="@color/colorMain"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/answer_end_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textColor="@color/color33"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:id="@+id/answer_end_tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/color99"
        tools:text="@string/contentDialogEndLearning"
        android:textSize="15sp"
        android:lineSpacingMultiplier="1.4"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="20dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <com.gjjy.frontlib.widget.CheckButton
        android:id="@+id/answer_end_cb_check_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <TextView
        android:id="@+id/answer_end_tv_test_go_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stringTestGoBackBtn"
        android:textColor="@color/colorMain"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>
</LinearLayout>