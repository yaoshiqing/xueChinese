<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:alpha="0.9">

    <ImageView
        android:id="@+id/front_init_guide_iv_daily_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_init_guide_daily_life"
        android:contentDescription="@string/stringEmpty"
        android:layout_marginTop="21dp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/front_init_guide_iv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_init_guide_review"
        android:contentDescription="@string/stringEmpty"
        android:layout_gravity="end"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="6dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/front_init_guide_iv_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_init_guide_ok_btn"
        android:contentDescription="@string/stringEmpty"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="197dp"
        android:focusable="true"
        android:clickable="true"/>
</FrameLayout>