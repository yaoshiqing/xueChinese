<?xml version="1.0" encoding="utf-8"?>
<com.ybear.ybcomponent.widget.shape.ShapeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    app:shapeRadius="10dp"
    app:shapeShadowOffsetX="4dp"
    app:shapeShadowOffsetY="4dp"
    android:padding="14dp">

    <ImageView
        android:id="@+id/user_center_plate_iv_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_user_center_stick_days"
        android:contentDescription="@string/stringEmpty"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:id="@+id/user_center_plate_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textSize="16sp"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/user_center_plate_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:textSize="12sp"
        android:textColor="@color/colorBlack" />

</com.ybear.ybcomponent.widget.shape.ShapeLinearLayout>