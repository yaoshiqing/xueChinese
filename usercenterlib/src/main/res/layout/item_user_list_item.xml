<?xml version="1.0" encoding="utf-8"?>
<com.ybear.ybcomponent.widget.shape.ShapeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    app:shape="roundRect"
    app:shapeRadius="10dp"
    app:shapeBorderColor="@color/colorEF"
    app:shapeBorderSize="2dp">

    <TextView
        android:id="@+id/item_user_list_tv_index"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        tools:text="1"
        android:textSize="16sp"
        android:textColor="@color/color99"
        android:gravity="center"/>

    <include
        android:id="@+id/item_user_list_inc_ll_user_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/item_user_photo"/>

    <TextView
        android:id="@+id/item_user_list_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Name"
        android:textSize="16sp"
        android:textColor="@color/color33"
        android:maxLength="25"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/item_user_list_tv_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100XP"
        android:textSize="16sp"
        android:textColor="@color/colorBuyVipMain"
        android:gravity="end"
        android:layout_marginEnd="24dp"/>

</com.ybear.ybcomponent.widget.shape.ShapeLinearLayout>