<?xml version="1.0" encoding="utf-8"?>
<com.ybear.ybcomponent.widget.shape.ShapeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="62dp"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="9dp"
    app:shape="roundRect"
    app:shapeRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/item_integral_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="title"
            android:textSize="16sp"
            android:textColor="@color/color33"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/item_integral_tv_income_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+100"
            android:textSize="16sp"
            android:textColor="@color/colorBuyVipMain"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_integral_tv_expend_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-10"
            android:textSize="16sp"
            android:textColor="@color/color66"
            android:textStyle="bold"
            android:layout_marginStart="15sp"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMeBg"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_integral_rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

</com.ybear.ybcomponent.widget.shape.ShapeLinearLayout>