<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:paddingTop="15dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_marginBottom="14dp"
    app:shape="roundRect"
    app:shapeRadius="10dp">

    <TextView
        android:id="@+id/item_integral_detail_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="title"
        android:textSize="16sp"
        android:textColor="@color/color33"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/item_integral_detail_tv_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="type"
        android:textSize="14sp"
        android:textColor="@color/color99"
        android:gravity="center"
        android:layout_below="@id/item_integral_detail_tv_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_integral_detail_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="01/04/2020  11:06:12"
        android:textSize="12sp"
        android:textColor="@color/color99"
        android:gravity="center"
        android:layout_below="@id/item_integral_detail_tv_explain"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="14dp"/>

    <TextView
        android:id="@+id/item_integral_detail_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+100"
        android:textSize="16sp"
        android:textColor="@color/colorBuyVipMain"
        android:textStyle="bold"
        android:layout_alignEnd="@id/item_integral_detail_tv_title"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/item_integral_detail_v_div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMeBg"
        android:layout_below="@id/item_integral_detail_tv_time"/>

</RelativeLayout>