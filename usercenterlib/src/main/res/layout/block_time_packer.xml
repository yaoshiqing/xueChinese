<?xml version="1.0" encoding="utf-8"?>
<com.ybear.ybcomponent.widget.shape.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:orientation="vertical"
    app:shapeRadius="10dp"
    app:shapeBorderSize="2dp"
    app:shapeBorderColor="@color/colorEF"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/stringSelectTime"
            android:textSize="16sp"
            android:textColor="@color/color66"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/time_packer_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringDefaultTime"
            android:textSize="18sp"
            android:textColor="@color/color66"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_gravity="center">
        <com.contrarywind.view.WheelView
            android:id="@+id/time_packer_wv_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.contrarywind.view.WheelView
            android:id="@+id/time_packer_wv_minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</com.ybear.ybcomponent.widget.shape.ShapeLinearLayout>