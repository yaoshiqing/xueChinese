<?xml version="1.0" encoding="utf-8"?>
<com.ybear.ybcomponent.widget.shape.ShapeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    app:shape="roundRect"
    app:shapeRadius="10dp">

    <include
        android:id="@+id/user_center_friends_inc_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/block_user_center_model_title"/>

    <LinearLayout
        android:id="@+id/user_center_friends_ll_not_login_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite90"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringShareTipsOfFriends"
            android:textSize="14sp"
            android:textColor="@color/color66"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/user_center_friends_tv_invite_friends_btn"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:text="@string/stringInviteBtnOfFriends"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/ic_touch_btn_true"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"/>
    </LinearLayout>


</com.ybear.ybcomponent.widget.shape.ShapeLinearLayout>