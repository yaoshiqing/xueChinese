<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:gravity="center_horizontal">

    <Space
        android:id="@+id/toolbar_height_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.gjjy.basiclib.widget.Toolbar
        android:id="@+id/login_tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_login_icon"
        android:contentDescription="@string/stringEmpty" />

    <ImageView
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_login_text"
        android:contentDescription="@string/stringEmpty"
        android:layout_marginTop="15dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/shape_login_divider"
        android:drawableEnd="@drawable/shape_login_divider"
        android:drawablePadding="7dp"
        android:text="@string/stringRegOrLogin"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <com.gjjy.loginlib.widget.EmailLoginButton
        android:id="@+id/login_elb_email_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="28dp"/>

    <com.gjjy.loginlib.widget.FacebookLoginButton
        android:id="@+id/login_flb_facebook_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"/>

    <com.gjjy.loginlib.widget.GoogleLoginButton
        android:id="@+id/login_glb_google_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="20dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/login_ll_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/login_tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_privacy_policy_unselected"
            android:drawablePadding="5dp"
            android:textSize="13sp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:focusable="true"
            android:clickable="true"
            android:tag="0"/>
        <TextView
            android:id="@+id/login_tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:focusable="true"
            android:clickable="true" />
    </LinearLayout>
</LinearLayout>