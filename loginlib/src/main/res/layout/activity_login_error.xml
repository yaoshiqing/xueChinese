<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal">

    <Space
        android:id="@+id/toolbar_height_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.gjjy.basiclib.widget.Toolbar
        android:id="@+id/login_error_tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_login_error_icon"
        android:drawablePadding="18dp"
        android:text="@string/stringLoginErrorTips"
        android:textColor="@color/color66"
        android:textSize="15sp"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/login_error_stv_try_again_btn"
        android:layout_width="310dp"
        android:layout_height="62dp"
        android:text="@string/stringTryAgain"
        android:textSize="19sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/ic_touch_btn_true"
        android:gravity="center"
        android:layout_marginTop="77dp"
        android:focusable="true"
        android:clickable="true"/>

    <TextView
        android:id="@+id/login_error_tv_other_login_btn"
        android:layout_width="310dp"
        android:layout_height="62dp"
        android:text="@string/stringOtherLogin"
        android:textSize="19sp"
        android:textColor="@color/colorMain"
        android:textStyle="bold"
        android:background="@drawable/ic_touch_skip_btn"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:focusable="true"
        android:clickable="true"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>
</LinearLayout>